[
    {{- $pages := where .Site.RegularPages "Section" "games" -}}
    {{- range $index, $e := $pages -}}
    {
        "title": {{ .Title | jsonify }},
        "permalink": {{ .Permalink | jsonify }},
        "image": {{ .Params.thumbnail | jsonify }}
    }{{ if ne (add $index 1) (len $pages) }},{{ end }}
    {{- end -}}
]